<ul class ="large-block-grid-3 show-for-large">
<% @top3_rewards.each do |top_reward| %>
  <li>
    <div class = "center-cropped">
      <a class="th th-item" href="<%= top_reward.image_url %>" style="background-image: url(<%= top_reward.image_url %>);">
        <img class="transparent" src="<%= top_reward.image_url %>">
      </a>
    </div>
    <h6><%= top_reward.strip_title %></h6>
    <p class="carrat-pts"><%= top_reward.carrats %> carrats</p>
  </li>
<% end %>

<div id="rewards-link"><%= link_to("See more rewards", rewards_path) %></div>
</ul>

