<div id="rewards-index-title"><h3>REWARDS</h3></div>
<div id="rewards-index" class="container">
	<% @rewards.each_slice(3) do |row_of_four| %>
		<ul class="small-block-grid-1 medium-block-grid-3 large-block-grid-3">
			<% row_of_four.each do |reward| %>
				<li class="reward-box">
					<img src="<%= reward.image_url %>">
					<div class="reward-title"><%= reward.strip_title %></div>
					<div class="reward-carrats"><%= reward.carrats %> carrats</div>
					<span id="button-span"><a href="#" data-reveal-id="myModal" class="radius button" id="button-text">More Info&hellip;</a></span>
					<div id="myModal" class="reveal-modal" data-reveal aria-labelledby="modalTitle" 		aria-hidden="true" role="dialog">
					  <h2 id="modalTitle"><%= reward.strip_title %></h2>
					  <img src="<%= reward.image_url %>">
					  <%= form_for :claimed_reward, url: claimed_rewards_path do |f| %>
					  	<input type="hidden" name="id" value="<%= reward.id %>">
					  	<%= f.submit 'Redeem', class: "radius button" %>
					  <% end %>
					  <div id="modal-description"><%= reward.description.html_safe %></div>
					  <a class="close-reveal-modal" aria-label="Close">&#215;</a>
					</div>
				</li>
			<% end %>
		</ul>
	<% end %>
</div>